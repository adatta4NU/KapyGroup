<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kapy News</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navb

                 ar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index", "Home")" style="padding:0px 10px;">
                            <img src="@Url.Content("~/Content/Images/kapy_logo.png")" style="width:80px;height:50px;" />
                        </a>
                    </li>
                    <li>@Html.ActionLink("Manage Users and Roles", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Manage News", "ManageNews", "Admin")</li>
                    @*<li>@Html.ActionLink("Create User", "Create", "Admin")</li>
                    <li>@Html.ActionLink("Create new Role", "CreateRole", "Admin")</li>
                    <li>@Html.ActionLink("Change User Role", "ChangeRole", "Admin")</li>*@
                    @*<li>@Html.ActionLink("Delete News", "DeleteNews", "Admin")</li>*@
                    <li>
                        @using (Html.BeginForm("SearchForUsers", "Admin", FormMethod.Get))
                        {

                            @Html.TextBox("SearchString")<span>    </span><input class="btn btn-primary btn-xs" type="submit" value="Search" />

                        }
                    </li>
                    
                </ul>

                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="container">
            <div class="col-sm-9 col-md-9 main">
                @RenderBody()
            </div>
        </div>



        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Kapy News. Kapy News is not responsible for the content of external sites.</p>
        </footer>
    </div>



  


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

